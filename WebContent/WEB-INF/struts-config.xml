<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
	<!-- Forms -->
	<form-beans>
		<form-bean name="addProductForm" type="com.epam.task6.form.AddProductForm"></form-bean>
	</form-beans>

	<!-- Global forwards -->
	<global-forwards>
		<forward name="categoriesPage" path="/ShowCategories.do" />
		<forward name="show_categories" path="/jsp/categories.jsp" />
		<forward name="show_subcategories" path="/jsp/subcategories.jsp" />
		<forward name="show_products" path="/jsp/products.jsp" />
		<forward name="add_product" path="/jsp/addProduct.jsp" />

	</global-forwards>

	<!-- Actions -->
	<action-mappings>

		<action path="/ShowCategories" type="com.epam.task6.action.ShowCategoriesAction">
		</action>

		<action path="/ShowSubcategories" type="com.epam.task6.action.ShowSubcategoriesAction">
		</action>

		<action path="/ShowProducts" type="com.epam.task6.action.ShowProductsAction">
		</action>

		<action path="/AddProduct" name="addProductForm"
			type="com.epam.task6.action.AddProductAction">
		</action>
		
		<action path="/SaveProduct" name="addProductForm"
			type="com.epam.task6.action.AddProductAction">
		</action>

	</action-mappings>
</struts-config>